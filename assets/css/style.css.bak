/* =====================
   Design System â€” Blog IA (Dark)
   Breakpoints: 640px, 1024px
   ===================== */

/* ===== Brand Palette (Dark) ===== */
:root {
  --color-bg: #0D1117;
  --color-bg-secondary: #161B22;
  --color-text: #FFFFFF;
  --color-text-secondary: #C9D1D9;
  --color-primary: #3B82F6;
  --color-secondary: #06B6D4;
  --color-success: #22C55E;
  --color-alert: #E11D48;
  --color-info: #38BDF8;
  --color-warn: #F59E0B;

  /* spacing */
  --space-1: 4px; --space-2: 8px; --space-3: 12px;
  --space-4: 16px; --space-5: 24px; --space-6: 32px; --space-7: 48px; --space-8: 72px;

  /* radius */
  --radius-sm: 6px; --radius-md: 10px; --radius-lg: 16px; --radius-pill: 999px;

  /* font sizes (fluid) */
  --fs-1: clamp(0.875rem, 0.8rem + 0.2vw, 1rem);   /* small */
  --fs-2: clamp(1rem, 0.95rem + 0.3vw, 1.125rem);  /* base */
  --fs-3: clamp(1.25rem, 1.1rem + 0.6vw, 1.5rem);  /* h3 */
  --fs-4: clamp(1.5rem, 1.3rem + 0.8vw, 2rem);     /* h2 */
  --fs-5: clamp(2rem, 1.6rem + 1.6vw, 2.75rem);    /* h1 */

  /* elevations */
  --elev-1: 0 2px 6px rgba(0,0,0,0.35);
  --elev-2: 0 6px 16px rgba(0,0,0,0.45);
  --elev-3: 0 12px 28px rgba(0,0,0,0.55);

  /* borders dark subtle */
  --border-soft: 1px solid rgba(255,255,255,0.06);
  --border-strong: 1px solid rgba(255,255,255,0.12);

  /* layout */
  --container: 1100px;
}

/* ===== Reset basics ===== */
* { box-sizing: border-box; }
html, body { height: 100%; scroll-behavior: smooth; }
body {
  margin: 0;
  background-color: var(--color-bg);
  color: var(--color-text);
  font-family: 'Roboto', sans-serif;
}
img { max-width: 100%; display: block; }

/* ===== Typography ===== */
h1, h2, h3 {
  font-family: 'Poppins', sans-serif;
  margin: 0 0 var(--space-4);
}
h1 { font-size: var(--fs-5); }
h2 { font-size: var(--fs-4); }
h3 { font-size: var(--fs-3); }
p { font-size: var(--fs-2); line-height: 1.65; color: var(--color-text-secondary); }
.lead { font-size: clamp(1.125rem, 1rem + 0.6vw, 1.4rem); }

.muted { color: var(--color-text-secondary); }

/* ===== Utilities ===== */
.container { max-width: var(--container); margin: 0 auto; padding: 0 var(--space-5); }
.section { padding: var(--space-8) 0; }
.row { display: grid; gap: var(--space-5); }
.row.two { grid-template-columns: 1fr; }
@media (min-width: 640px) { .row.two { grid-template-columns: repeat(2,1fr); } }

/* Skip link */
.skip-link {
  position: absolute; left: -9999px; top: auto; width: 1px; height: 1px; overflow: hidden;
}
.skip-link:focus {
  position: static; width:auto; height:auto; padding:var(--space-2) var(--space-3);
  background:var(--color-secondary); color:var(--color-bg); border-radius: var(--radius-sm);
  margin: var(--space-2) var(--space-5);
  display:inline-block;
}

/* Focus visible */
:focus-visible {
  outline: 2px solid var(--color-secondary);
  outline-offset: 2px;
}

/* ===== Navbar ===== */
.navbar {
  position: sticky; top: 0; z-index: 100;
  background: var(--color-bg-secondary);
  border-bottom: var(--border-soft);
  box-shadow: var(--elev-1);
}
.navbar .container {
  display: flex; align-items: center; justify-content: space-between;
  padding: 12px 0;
}
.brand { display: flex; align-items: center; gap: var(--space-3); }
.logo {
  width: 36px; height: 36px; border-radius: var(--radius-pill);
  background: linear-gradient(135deg, var(--color-secondary), var(--color-primary));
}
.brand-title {
  font-family: 'Poppins', sans-serif; font-weight: 600; color: var(--color-text); text-decoration: none;
}
.nav-links {
  display: none;
  gap: var(--space-4); align-items: center;
}
.nav-links a {
  color: var(--color-text-secondary); text-decoration: none;
  padding: 8px 12px; border-radius: var(--radius-sm); font-family: 'Poppins', sans-serif; font-weight: 500;
}
.nav-links a:hover { color: var(--color-primary); background: rgba(255,255,255,0.04); }
.nav-links a.active { color: var(--color-text); background: rgba(255,255,255,0.06); }

/* Navigation active avec classes de page */
.page-home .nav-home,
.page-entreprises .nav-entreprises,
.page-applications .nav-applications,
.page-contact .nav-contact {
  color: var(--color-text); 
  background: rgba(255,255,255,0.06);
}
.burger { background: none; border: none; color: var(--color-text); font-size: 1.6rem; }

/* show nav on >=640px */
@media (min-width: 640px) {
  .nav-links { display: flex; }
  .burger { display: none; }
}

/* mobile nav dropdown (applied by JS via .nav-open) */
.nav-open .nav-links {
  display: flex; position: absolute; left: 0; right: 0; top: 60px;
  background: var(--color-bg-secondary); padding: var(--space-4) var(--space-5);
  border-bottom: var(--border-soft);
}

/* ===== Hero ===== */
.hero .lead { margin: var(--space-4) 0; }
.hero .cta { display: flex; gap: var(--space-3); flex-wrap: wrap; }

/* ===== Buttons ===== */
.btn {
  display: inline-block;
  font-family: 'Poppins', sans-serif; font-weight: 500;
  padding: 10px 20px; border-radius: var(--radius-sm);
  cursor: pointer; border: none;
  transition: background-color 0.2s ease, transform 0.1s ease, box-shadow 0.2s ease;
  box-shadow: var(--elev-1);
}
.btn:hover { transform: translateY(-2px); }
.btn:active { transform: translateY(0); }
.btn[disabled], .btn:disabled { opacity: 0.55; cursor: not-allowed; }
.btn-sm { padding: 6px 12px; font-size: var(--fs-1); }
.btn-lg { padding: 14px 28px; font-size: var(--fs-2); }

.btn-primary { background-color: var(--color-primary); color: var(--color-text); }
.btn-primary:hover { background-color: var(--color-secondary); }
.btn-secondary { background-color: transparent; color: var(--color-primary); border: 1px solid var(--color-primary); }
.btn-secondary:hover { background-color: var(--color-primary); color: var(--color-text); }
.btn-success { background-color: var(--color-success); color: var(--color-text); }
.btn-alert { background-color: var(--color-alert); color: var(--color-text); }
.btn-ghost { background: transparent; border: var(--border-soft); color: var(--color-text-secondary); }
.btn-ghost:hover { background: rgba(255,255,255,0.04); }

/* ===== Cards & grids ===== */
.cards {
  display: grid; gap: var(--space-5);
  grid-template-columns: 1fr;
}
@media (min-width: 640px) { .cards { grid-template-columns: repeat(2,1fr); } }
@media (min-width: 1024px) { .cards { grid-template-columns: repeat(3,1fr); } }

.card {
  background-color: var(--color-bg-secondary);
  border-radius: var(--radius-md);
  padding: var(--space-5);
  color: var(--color-text);
  box-shadow: var(--elev-1);
  border: var(--border-soft);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.card:hover { transform: translateY(-3px); box-shadow: var(--elev-2); }
.card .meta { font-size: var(--fs-1); color: var(--color-text-secondary); margin-top: var(--space-2); }

/* ===== Filters (chips) ===== */
.filters { display: flex; gap: var(--space-2); flex-wrap: wrap; margin-bottom: var(--space-4); }
.chip {
  background: transparent; border: 1px solid rgba(255,255,255,0.14);
  color: var(--color-text-secondary); padding: 8px 12px; border-radius: var(--radius-pill);
  cursor: pointer; font-family: 'Poppins', sans-serif;
}
.chip.active, .chip:hover { border-color: var(--color-primary); color: var(--color-text); }

/* ===== Newsletter ===== */
.newsletter .box {
  display: grid; gap: var(--space-4);
  grid-template-columns: 1fr;
  background: #0b0f14; border: var(--border-soft);
  border-radius: var(--radius-lg);
  padding: var(--space-5);
}
@media (min-width: 640px) { .newsletter .box { grid-template-columns: 1.4fr 1fr; align-items: center; } }
.box-form { display: grid; gap: var(--space-3); grid-template-columns: 1fr auto; align-items: center; }
.box-form input { min-width: 200px; }

/* ===== Forms ===== */
.form-field { margin-bottom: var(--space-4); }
label { display: block; margin-bottom: 6px; font-family: 'Poppins', sans-serif; }
input, textarea, select {
  width: 100%; padding: 10px;
  background-color: var(--color-bg-secondary);
  border: 1px solid #2d333b; border-radius: var(--radius-sm);
  color: var(--color-text);
  font-family: 'Roboto', sans-serif;
}
input::placeholder, textarea::placeholder { color: rgba(201,209,217,0.5); }
input:focus, textarea:focus, select:focus {
  outline: none; border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(59,130,246,0.2);
}
.help { color: var(--color-text-secondary); font-size: var(--fs-1); margin-top: 6px; }
.error { color: var(--color-alert); font-size: var(--fs-1); margin-top: 6px; }
input.error, textarea.error, select.error { border-color: var(--color-alert); box-shadow: 0 0 0 3px rgba(225,29,72,0.15); }

/* ===== Alerts ===== */
.alert {
  padding: 12px 20px; border-radius: var(--radius-sm);
  font-family: 'Roboto', sans-serif; margin: 15px 0;
  border: var(--border-soft); box-shadow: var(--elev-1);
}
.alert-success { background-color: rgba(34, 197, 94, 0.10); color: var(--color-success); }
.alert-error { background-color: rgba(225, 29, 72, 0.10); color: var(--color-alert); }
.alert-info { background-color: rgba(56, 189, 248, 0.12); color: var(--color-info); }
.alert-warn { background-color: rgba(245, 158, 11, 0.12); color: var(--color-warn); }

/* ===== A11y helpers ===== */
.visually-hidden {
  position: absolute !important;
  width: 1px; height: 1px;
  padding: 0; margin: -1px;
  overflow: hidden; clip: rect(0,0,0,0); white-space: nowrap; border: 0;
}

/* ===== Footer ===== */
.footer {
  background-color: var(--color-bg-secondary);
  border-top: var(--border-strong);
  padding: var(--space-7) 0 var(--space-5);
}

.footer-content {
  display: grid;
  gap: var(--space-6);
  grid-template-columns: 1fr;
}

/* Desktop layout - 3 colonnes */
@media (min-width: 768px) {
  .footer-content {
    grid-template-columns: 1.2fr 1fr 1fr;
    gap: var(--space-5);
  }
}

/* Section principale avec brand */
.footer-main {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.footer-brand {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  margin-bottom: var(--space-3);
}

.footer-logo {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-pill);
  background: linear-gradient(135deg, var(--color-secondary), var(--color-primary));
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  color: white;
}

.footer-brand-text {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: var(--fs-2);
  color: var(--color-text);
}

.footer-tagline {
  color: var(--color-text-secondary);
  font-size: var(--fs-1);
  margin-bottom: var(--space-4);
  line-height: 1.5;
}

/* Sections footer */
.footer-section {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.footer-section-title {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  font-size: var(--fs-2);
  color: var(--color-text);
  margin-bottom: var(--space-2);
}

.footer-links {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.footer-link {
  color: var(--color-text-secondary);
  text-decoration: none;
  font-size: var(--fs-1);
  transition: color 0.2s ease;
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.footer-link:hover,
.footer-link:focus {
  color: var(--color-primary);
}

.footer-link:focus {
  outline: 2px solid var(--color-secondary);
  outline-offset: 2px;
  border-radius: var(--radius-sm);
}

/* Informations de contact et gÃ©o */
.contact-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.contact-item {
  display: flex;
  align-items: center;
  gap: var(--space-2);
  font-size: var(--fs-1);
  color: var(--color-text-secondary);
}

.contact-icon {
  width: 16px;
  height: 16px;
  opacity: 0.7;
}

.badge {
  display: inline-flex;
  align-items: center;
  gap: var(--space-1);
  background: rgba(34, 197, 94, 0.1);
  color: var(--color-success);
  padding: 4px 8px;
  border-radius: var(--radius-pill);
  font-size: 0.75rem;
  font-weight: 500;
  border: 1px solid rgba(34, 197, 94, 0.2);
}

/* RÃ©seaux sociaux */
.social-links {
  display: flex;
  gap: var(--space-3);
  margin-top: var(--space-3);
}

.social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  background: rgba(255, 255, 255, 0.05);
  border: var(--border-soft);
  border-radius: var(--radius-sm);
  color: var(--color-text-secondary);
  text-decoration: none;
  transition: all 0.2s ease;
}

.social-link:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--color-primary);
  transform: translateY(-2px);
}

.social-link:focus {
  outline: 2px solid var(--color-secondary);
  outline-offset: 2px;
}

/* Footer bottom */
.footer-bottom {
  margin-top: var(--space-6);
  padding-top: var(--space-4);
  border-top: var(--border-soft);
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  align-items: center;
  text-align: center;
}

@media (min-width: 768px) {
  .footer-bottom {
    flex-direction: row;
    justify-content: space-between;
    text-align: left;
  }
}

.footer-bottom-text {
  font-size: var(--fs-1);
  color: var(--color-text-secondary);
}

.footer-bottom-links {
  display: flex;
  gap: var(--space-4);
  flex-wrap: wrap;
  justify-content: center;
}

@media (min-width: 768px) {
  .footer-bottom-links {
    justify-content: flex-end;
  }
}

.footer-bottom-link {
  color: var(--color-text-secondary);
  text-decoration: none;
  font-size: var(--fs-1);
  transition: color 0.2s ease;
}

.footer-bottom-link:hover {
  color: var(--color-primary);
}

/* CTA subtil */
.footer-cta {
  margin-top: var(--space-4);
}

/* ===== Reduced motion ===== */
@media (prefers-reduced-motion: reduce) {
  * { transition: none !important; animation: none !important; }
}
